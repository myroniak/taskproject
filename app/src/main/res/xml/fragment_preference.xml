<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/pref_title_category_first">

        <yuku.ambilwarna.widget.AmbilWarnaPreference
            android:defaultValue="0x4666ff00"
            android:key="colorDateDefault"
            android:title="@string/pref_title_color_default"
            app:supportsAlpha="true"/>

        <yuku.ambilwarna.widget.AmbilWarnaPreference
            android:defaultValue="0x46ffcc00"
            android:key="colorDateStart"
            android:title="@string/pref_title_color_start"
            app:supportsAlpha="true"/>

        <yuku.ambilwarna.widget.AmbilWarnaPreference
            android:defaultValue="0x46ff0000"
            android:key="colorDateEnd"
            android:title="@string/pref_title_color_end"
            app:supportsAlpha="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_title_category_second">
        <Preference
            android:key="default"
            android:summary="@string/pref_summary_set_default_value"
            android:title="@string/pref_title_set_default_value"/>

    </PreferenceCategory>

</PreferenceScreen>
