<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    android:id="@+id/swipe"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">

    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_swipe_reset"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_reset"
            android:src="@drawable/ic_autorenew_white_48dp"/>

        <ImageButton
            android:id="@+id/btn_swipe_reset_end"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_reset_end"
            android:src="@drawable/ic_autorenew_white_end_48dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bird_bottom"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnSwipeEditTask"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_edit"
            android:src="@drawable/ic_mode_edit_white_36dp"/>

        <ImageButton
            android:id="@+id/btnSwipeDeleteTask"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_delete"
            android:src="@drawable/ic_delete_white_36dp"
            />
    </LinearLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="1dp"
        android:paddingTop="1dp">

        <TextView
            android:id="@+id/textViewTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_title">
        </TextView>

        <TextView
            android:id="@+id/textViewTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTaskTitle"
            android:padding="5dp"
            android:textColor="@color/colorGrey">
        </TextView>


        <TextView
            android:id="@+id/textViewTaskDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTaskDescription"
            android:padding="5dp"
            android:textColor="#2300bf">
        </TextView>


        <ImageButton
            android:id="@+id/btnStartTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewTaskDate"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnStopTask"
            android:layout_toStartOf="@+id/btnStopTask"
            android:background="@drawable/selector_start"/>

        <ImageButton
            android:id="@+id/btnStopTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewTaskDate"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_stop"/>
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>